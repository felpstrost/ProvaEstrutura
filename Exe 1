//Construir um m√©todo que receba uma matriz quadrada de inteiros e exiba de forma recursiva a diagonal principal
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void diag (int mat[][10], int tam, int ind) {
    if (ind >= tam) {
        return;
    }

    printf("%d ", mat[ind][ind]);

    diag(mat, tam, ind + 1);
}

int main() {
    int tam;
    int i;
    int j;
    printf("Digite o tamanho da matriz quadrada: ");
    scanf("%d", &tam);

    int matriz[10][10];
    srand(time(NULL));

    for (i = 0; i < tam; i++) {
        for (j = 0; j < tam; j++) {
            matriz[i][j] = rand() % 100;
        }
    }

    
    printf("\nMatriz:\n");
    for (i = 0; i < tam; i++) {
        for (j = 0; j < tam; j++) {
            printf("%d ", matriz[i][j]);
        }
        printf("\n");
    }

    printf("\nDiagonal Principal: ");
    diag(matriz, tam, 0);
    printf("\n");

    return 0;
}
